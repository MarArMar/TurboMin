{
  "compilerOptions": {
    "outDir": "build",
    "moduleResolution": "node",
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "allowJs": true,
    "checkJs": true
  },

  "exclude": [
    "../../**/node_modules/**",
    "../../**/.svelte-kit/**",
    "../../**/dist/**",
    "../../**/build/**",
    "../../**/.svelte/**",
    "../../**/.vercel_build_output/**",
    "../../**/.vercel/**",
    "../../**/coverage/**",
    "../../**/_/**",
    "../../**/vite.config.js.timestamp-*",
    "../../**/vite.config.ts.timestamp-*"
  ]
}
